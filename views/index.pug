extends layout

block content
  h1= title
  
  ul 
    - message_list.sort((a,b) => b.date - a.date);
    each message in message_list
      h3 #{message.title}
      p #{message.text}
      if user
        if user.member_status === true
          p Posted by #{message.author.username} on #{message.date}
    
    else
      li There are no messages.